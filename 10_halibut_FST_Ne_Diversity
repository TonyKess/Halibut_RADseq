  geom_vline(xintercept = log10(10)) + geom_vline(xintercept = log10(100)) + geom_vline(xintercept = log10(1000)) + geom_vline(xintercept = log10(10000))   + geom_vline(xintercept = log10(100000)) + theme_classic()


